<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/darkGrey" />
                    <corners android:radius="25dp" />
